{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "strict": [
            "warn",
            "global"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "no-alert": "off",
        "no-console": "off",
        "no-debugger": "off",
        "no-unused-vars": "warn",
        "id-length": [
            "warn",
            {
                "min": 3,
                "max": 30,
                "exceptions": [
                    "i",
                    "j"
                ]
            }
        ],
        "camelcase": [
            "warn",
            {
                "properties": "always"
            }
        ],
        "no-var": "error",
        "valid-jsdoc": [
            "warn"
        ],
        "require-jsdoc": [
            "warn",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": true,
                    "ClassDeclaration": true,
                    "ArrowFunctionExpression": false,
                    "FunctionExpression": false
                }
            }
        ]
    }
}